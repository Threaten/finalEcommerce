<% layout('template') -%>

<div id="navbar-gap">
  <section id="contact" class="contact" >
    <div class="row">
      <div clas="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">

          <input type="text" id="search" class="form-control input-lg" name="search">
            <span class="input-group-btn">
              <button type="submit"  class="btn btn-defalut btn-lg"><i class="glyphicon glyphicon-search"></i></button>
            </span>
        </div>
      </dv>
    </div>

    <div class="container">
      <div class="row" id="search_results">
        <% for (var i = 0; i < products.length; i++) { %>
          <div class="col-md-4">
            <a href="/product/<%= products[i]._id %>">
              <div class="thumbnail">
                <img src="<%= products[i].img %>">
                <div class="caption">
                  <h3><%= products[i].name %></h3>
                  <p><%= products[i].category.name %></p>
                  <p style="font-styke:bold">$<%= products[i].price %></p>
                </div>
              </div>
            </a>
          </div>
          <% } %>

          <ul class="pagination text-center">
            <li>
              <% for (var i = 1; i < pages; i++) {%>
                <% if (i === 1) { %>
                  <li><a href="/"><%= i %></a></li>
                <% } else { %>
                  <li><a href="/page/<%= i %>"><%= i %></a></li>
                  <% } %>
              <% } %>
            </li>
        </div>

    </section>
  </div>
