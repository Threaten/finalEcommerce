<% layout('template') -%>
<div id="navbar-gap">
  <section id="contact" class="contact" >
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <img src="<%= product.img %>">
        </div>
        <div class="col-md-4">
        </div>

        <div class="col-md-4">
          <h3><%= product.name %></h3>
          <h1>$<%= product.price %></h1>

          <form method="post">
            <div class="btn-group" role="group" aria-label="...">
              <input type="text" name="quantity" id="quantity" value="1"></input>
              <button type="button" id="minus" class="btn btn-default">-</button>
              <button type="button" id="total" class="btn btn-default">1</button>
              <button type="button" id="plus" class="btn btn-default">+</button>
            </div>

            <div class="form-group">
              <input type="hidden" name="productId" id="productId" value="<%= product._id %>"></input>
              <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>"></input>

              <label>Total: $</label><label name="priceDisplay" id="priceDisplay"><%= product.price %></label>
              <input type="hidden" name="priceTotal" id="priceTotal" value="<%= product.price %>"></input>

            </div>

            <% if (user) { %>
              <button type="submit" class="btn btn-default btn-lg">Add to Cart</button>
            <% }else { %>
              <a href="/register">Register</a>
            <% } %>
          </form>
        </div>
      </div>

    </section>
  </div>
