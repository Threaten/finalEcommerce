<% layout('template') -%>
<div id="navbar-gap">
  <section id="contact" class="contact" >
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <% for (var i = 0; i < userCart.items.length; i++) { %>
            <div class="list-group">
              <span class="list-group-item">
                <div class="row">
                  <div class="col-md-3">
                    <span><img class="product-image" src="<% userCart.items[i].item.img %>"></span>
                  </div>

                  <div class="col-md-6">
                    <p class="list-group-item-heading"><%= userCart.items[i].item.name %></p>
                  </div>

                  <div class="col-md-3">
                    <p class="list-group-item-heading"><%= userCart.items[i].item.quantity %></p>
                    <p class="list-group-item-heading"><%= userCart.items[i].item.price %></p>
                  </div>
                  <% } %>
        </div>
        <div class="3">

        </div>
        <div class="3">

        </div>
      </div>
    </div>

  </section>
</div>
